<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/fav_symbol"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="SYMBOL"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fav_price"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fav_symbol"
        android:layout_alignBottom="@+id/fav_symbol"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/fav_symbol"
        android:text="Price"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fav_change"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fav_price"
        android:layout_alignBottom="@+id/fav_price"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="37dp"
        android:layout_toEndOf="@+id/fav_price"
        android:text="TextView"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp" />
</RelativeLayout>